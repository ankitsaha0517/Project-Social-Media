    <div class="posts parent mb-20">
      <% posts.reverse().forEach((post) => { %>
        <div class="post mt-10 w-full min-h-[50vh]">
          <div class="title px-4 flex items-center gap-2">
            <div class="w-[9vw] h-[9vw] bg-sky-100 rounded-full overflow-hidden">
              <a href="/userprofile/<%=post.owner._id%>">
              <%if (post.owner && post.owner.avater && post.owner.avater.url) { %>
                <img class="w-full h-full object-cover" src="<%=post.owner.avater.url %>" alt="">
              <% }%>
            </div>
            <h4 class="text-sm font-semibold">
              <%= post.owner.username %>
            </h4>
            </a>
            <h6 class="text-xs opacity-30">
              <%=post.realTimes%>
            </h6>
          </div>
          <div class="relative w-full h-96 mt-4 bg-zinc-800 overflow-hidden">
            <img class="w-full h-full object-contain" src="<%=post.img.url %>" alt="">
          </div>
          <div class="options w-full px-4 flex justify-between items-center text-[1.4rem]">
            <div class="flex gap-3 mt-2">
              <i class="heart ri-heart-3-line"></i>
              <i class="ri-chat-3-line"></i>
              <i class="ri-share-circle-line"></i>
            </div>
            <i class="save ri-bookmark-line"></i>
          </div>
          <h3 class="likeval px-4 mt-2 text-sm leading-none tracking-tight">
            <%= post.likes.length %> likes
          </h3>
          <h2 class="text-white font-light text-sm mt-2">
            <span class="font-semibold pl-4 pr-2">
              <%= post.owner.username %>
            </span>
            <%= post.caption %>
          </h2>
        </div>
      <% }) %>
    </div>
